# CODEFINDER Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# =============================================================================
# REQUIRED SETTINGS (Production)
# =============================================================================

# Secret key for JWT tokens and encryption
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# MUST be at least 32 characters in production
SECRET_KEY=your-secret-key-change-in-production

# Database connection URL
# Production: Use PostgreSQL (e.g., postgresql://user:password@host:5432/dbname)
# Development: SQLite is acceptable (e.g., sqlite:///./test_ancient_text_analyzer.db)
DATABASE_URL=sqlite:///./test_ancient_text_analyzer.db

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Debug mode (set to False in production)
# Default: False
DEBUG=False

# Production mode flag
# Set to "true" in production environments
PRODUCTION=false

# =============================================================================
# CORS Configuration
# =============================================================================

# Comma-separated list of allowed CORS origins
# Example: http://localhost:3000,https://app.example.com
# In production, specify exact origins (no wildcards)
# Default: localhost origins (development only)
ALLOWED_ORIGINS=

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================

# Redis connection URL for caching and distributed rate limiting
# Format: redis://host:port or redis://:password@host:port
# Leave empty if not using Redis
REDIS_URL=redis://localhost:6379

# =============================================================================
# OCR Configuration
# =============================================================================

# Path to tesseract executable (auto-detected if not set)
# Example: /usr/bin/tesseract
TESSERACT_CMD=

# OCR confidence threshold (0.0-1.0)
# Default: 0.85
OCR_CONFIDENCE_THRESHOLD=0.85

# =============================================================================
# File Processing Configuration
# =============================================================================

# Maximum file upload size in bytes
# Default: 2147483648 (2GB)
MAX_FILE_SIZE=2147483648

# Upload directory
# Default: uploads
UPLOAD_DIR=uploads

# Temporary files directory
# Default: temp
TEMP_DIR=temp

# =============================================================================
# Processing Configuration
# =============================================================================

# Chunk size for large file processing
# Default: 1000
CHUNK_SIZE=1000

# Maximum number of worker threads
# Default: 4
MAX_WORKERS=4

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Path to log file
# Default: logs/app.log
LOG_FILE=logs/app.log

# =============================================================================
# NOTES
# =============================================================================
# - All boolean values can be: true, false, True, False, 1, 0
# - Paths can be relative or absolute
# - Environment variables take precedence over .env file
# - See app/core/config.py for detailed descriptions of each setting
